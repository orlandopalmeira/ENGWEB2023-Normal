extends layout

block content
  .w3-card-4
    header.w3-container.w3-blue
      h1 Registo #{planta._id} [#[a(href="/") Página principal]]
    
    .w3-container
      table.w3-table-all
        tr
          th.w3-blue(style="width: 400px") ID
          td= planta._id
        tr
          th.w3-blue(style="width: 400px") Número de registo
          td= planta.Num_registo
        tr
          th.w3-blue(style="width: 400px") Código de Rua
          td= planta.Codigo_rua
        tr
          th.w3-blue(style="width: 400px") Rua
          td= planta.Rua
        tr
          th.w3-blue(style="width: 400px") Local
          td= planta.Local
        tr
          th.w3-blue(style="width: 400px") Freguesia
          td= planta.Freguesia
        tr
          th.w3-blue(style="width: 400px") Espécie
          td= planta.Espécie
        tr
          th.w3-blue(style="width: 400px") Nome científico
          td= planta.Nome_cientifico
        tr
          th.w3-blue(style="width: 400px") Origem
          td= planta.Origem
        tr
          th.w3-blue(style="width: 400px") Data de plantação
          td= planta.Data_plantacao
        tr
          th.w3-blue(style="width: 400px") Estado
          td= planta.Estado
        tr
          th.w3-blue(style="width: 400px") Caldeira
          td= planta.Caldeira
        tr
          th.w3-blue(style="width: 400px") Tutor
          td= planta.Tutor
        tr
          th.w3-blue(style="width: 400px") Implantação
          td= planta.Implantação
        tr
          th.w3-blue(style="width: 400px") Gestor
          td= planta.Gestor
        tr
          th.w3-blue(style="width: 400px") Data actualização
          td= planta.Data_actualizacao
        tr
          th.w3-blue(style="width: 400px") Número de intervenções
          td=planta.Num_intervencoes

    footer.w3-container.w3-blue.w3-center
      h5 Orlando Palmeira - A97755 - LEI
